<mvc:View	xmlns:core="sap.ui.core" 
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m" 
			xmlns:semantic="sap.m.semantic" 
			xmlns:html="http://www.w3.org/1999/xhtml" 
			controllerName="consultanttracker.Consultant-Tracker_Prototype-1.controller.MasterConsultant">
	<semantic:MasterPage id="MasterConsultant">
		<semantic:content>

		<IconTabBar 	id="iconTabBar" 
						class="sapUiResponsiveContentPadding" 
						expandable="false"
						width="100%">
				<items>
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
										
					<IconTabFilter id="iconTabBarFilter2" 
								icon="sap-icon://folder" 
								tooltip="List of all projects" 
								text="Projects">
						<content>				
						
<List id="listId"
		items="{/results/}">
		<items>
			<ObjectListItem
				title="{ProjectDetails/Project_Name}"
				type="Active"
				press="onListItemPress">
				<firstStatus>
					<ObjectStatus
						text="In Progress" />
				</firstStatus>
				<attributes>
					<ObjectAttribute text="Date " />
				</attributes>
			</ObjectListItem>
		</items>
	</List>
		<OverflowToolbar id="otbFooter">
				<ToolbarSpacer/>
				 <Button  id="rateTeamBtn" text="Rate Members" icon="sap-icon://favorite" press="onRateTeam" enabled="{ratingsBtnConfig>/enabled}" visible="{ratingsBtnConfig>/visible}"/>
				 <Button  id="requestUserTimesBtn" text="Times" icon="sap-icon://time-entry-request" press="onRequestUserTimes"/>
		</OverflowToolbar>								

			</content>
					</IconTabFilter>
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					
				</items>		
			</IconTabBar>


		</semantic:content>
				
	</semantic:MasterPage>
<!-- TODO Ngoni, use fragments instead -->
<!-- 	Dialog for user to add times			 -->
 	<Dialog title="Task Times" id="timesDialog">

		<beginButton>
			<Button id="submitUserTimesBtn" text="Submit" press="onSubmitTimes" />
		</beginButton>
		<endButton>
			<Button text="Close" press="onDialogClose" />
		</endButton>
	</Dialog>	
<!-- 	Dialog for user to add times			 -->					
	<Dialog title="Rate Team Members" id="ratingsDialog">

		<beginButton>
			<Button text="Submit" press="onSubmitRates" />
		</beginButton>
		<endButton>
			<Button text="Close" press="onRatingsDialogClose" />
		</endButton>
	</Dialog>	
	
</mvc:View>