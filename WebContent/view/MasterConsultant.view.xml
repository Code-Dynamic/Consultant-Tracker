<mvc:View	xmlns:core="sap.ui.core" 
			xmlns:la="sap.ui.layout" 
			xmlns:u="sap.ui.unified" 
			xmlns:f="sap.ui.layout.form" 
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m" 
			xmlns:html="http://www.w3.org/1999/xhtml" 
			xmlns:semantic="sap.m.semantic" 
			controllerName="consultanttracker.Consultant-Tracker_Prototype-1.controller.MasterConsultant">
			
	<semantic:MasterPage id="MasterConsultant">
	
		<semantic:content>
					
		<IconTabBar 	id="iconTabBar" 
						class="sapUiResponsiveContentPadding" 
						expandable="false"
						width="100%">
						
				<items>
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
										
					<IconTabFilter id="iconTabBarFilter2" 
								icon="sap-icon://folder" 
								tooltip="List of all projects" 
								text="Projects">
					<content>				
						
<List id="listId"
		items="{assignmentsModel>/results/}">
		
		<items>
		
			<ObjectListItem
				title="{assignmentsModel>ProjectDetails/Project_Name}"
				type="Active"
				press="onListItemPress">
				
				<firstStatus>
				
					<ObjectStatus
						text="In Progress" />
						
				</firstStatus>
				
				<attributes>
					<ObjectAttribute text="Date " />
					
				</attributes>
				
			</ObjectListItem>
		</items>

	</List>							

			</content>
			
					</IconTabFilter>
					
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
				</items>		
			</IconTabBar>


		</semantic:content>
		
 		<semantic:customFooterContent>
			
			<MenuButton 
			text="action menu" 
			buttonMode="Split" 
			useDefaultActionOnly="true">
			
			<menu>
			
				<Menu itemSelected="onMenuAction">
				
					<items>
						<MenuItem
						id="rateTeamBtn"  
						text="team member rating" 
						icon="sap-icon://favorite"
						press="onRateTeam"
						enabled="{ratingsBtnConfig>/enabled}" 
				 		visible="{ratingsBtnConfig>/visible}">
						</MenuItem>
						
						<MenuItem 
						id="requestUserTimesBtn" 
						text="time entry" 
						icon="sap-icon://time-entry-request" 
				 		press="onRequestUserTimes">
						</MenuItem>
						
						<MenuItem
						id="feedBackBtn"
						text="communication" 
				 		icon="sap-icon://notification-2" 
				 		press="onFeedbackPress">
						</MenuItem>
					</items>
				</Menu>
			</menu>
		</MenuButton>
		
				 
		</semantic:customFooterContent>		
	</semantic:MasterPage>
<!-- TODO Ngoni, use fragments instead -->
<!-- 	Dialog for user to add times			 -->
 	<Dialog 
 	title="Task Times" 
 	id="timesDialog">

		<beginButton>
		
			<Button 
			id="submitUserTimesBtn" 
			text="Submit" 
			press="onSubmitTimes" />
			
		</beginButton>
		
		<endButton>
		
			<Button 
			text="Close" 
			press="onDialogClose" />
			
		</endButton>
		
	</Dialog>	
<!-- 	Dialog for user to add times			 -->					
	<Dialog 
	title="Rate Team Members" 
	id="ratingsDialog">

		<beginButton>
		
			<Button 
			text="Submit"
			press="onSubmitRates" />
			 
		</beginButton>
		
		<endButton>
		
			<Button 
			text="Close" 
			press="onRatingsDialogClose" />
			
		</endButton>
	</Dialog>	
	
</mvc:View>