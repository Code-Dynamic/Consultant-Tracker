		<semantic:customFooterContent>	
				  <HBox>
						<Button						
						id="rateTeamBtn" 
 						text="Team Ratings" 
 						icon="sap-icon://favorite" 
 						press="onRateTeam" 
 						enabled="false" 
 						visible="false" />
				 </HBox>					
				 <HBox>
						<Button press="editProjectDetails"  text="Edit Project" icon="sap-icon://edit"/>
				</HBox>
		</semantic:customFooterContent>
		
	</semantic:DetailPage>
	<Dialog 
		title="Rate Team Members" 
		id="ratingsDialog">
	
		<beginButton>
		
		<Button 
			text="Submit" 
			press="onSubmitRates" 
			id="submitRatesButton"/>
		</beginButton>
		
		<endButton>
		<Button 
			text="Close" 
			press="onRatingsDialogClose" 
			id="closeRatesButton"/>
		</endButton>
		
	</Dialog>
