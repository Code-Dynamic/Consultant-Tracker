		controllerName="consultanttracker.Consultant-Tracker_Prototype-1.controller.MasterAdmin"
		xmlns:html="http://www.w3.org/1999/xhtml" 
		xmlns:semantic="sap.m.semantic">
	<semantic:MasterPage id="MasterAdmin"  >
	
		<semantic:subHeader></semantic:subHeader>
		
		<semantic:content>
		
			<IconTabBar 
			id="iconTabBar" 
			class="sapUiResponsiveContentPadding" 
			expandable="false"
			width="100%"
			select = "onMasterIconTabFilterSelect">
				
				<items>		
					<IconTabFilter 
						id="iconTabBarFilter2" 
						icon="sap-icon://folder" 
						tooltip="List of all projects" 
						text="Projects"
						key = "projectsSelect"
						>
						
						<content>
						
							<Bar id="headerBar">
							
								<contentMiddle>
									
									<SearchField 
									id="projectSearchField"
									tooltip="{i18n>masterSearchTooltip}" 
									width="100%"
									search="onSearchProject" 
									liveChange="onSearchProject">
									
									</SearchField>
									
								</contentMiddle>
								
							</Bar>
							
							<List id="projectsList"
								items="{projectsModel>/results/}">
								
								<items
									id="projectListItems">
								
									<ObjectListItem
										id="projectObjectListItem"
										title="{projectsModel>Project_Name}"
										type="Active"
										press="onProjectListItemPress">
										
										<firstStatus>
										
											<ObjectStatus text="{projectsModel>status}" />
											
										</firstStatus>
										
										<attributes>
										
											<ObjectAttribute text="{ path: 'projectsModel>Project_Deadline',formatter: '.formatter.date'}" />
											
										</attributes>
										
									</ObjectListItem>
									
								</items>
								
							</List>
							
						</content>
						
					</IconTabFilter>
					
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					
					<IconTabSeparator icon="sap-icon://vertical-grip"/>
					
					<IconTabFilter 
						id="iconTabBarFilter3" 
						icon="sap-icon://employee" 
						tooltip="list of all Consultants" 
						text="Consultants"
						key = "consultantsSelect">
						
						<content>
						
							<Bar id="headerBar2">
							
								<contentMiddle>
								<SearchField 
								id="consultantSearchField"
								tooltip="{i18n>masterSearchTooltip}" 
								width="100%"
								search="onSearchConsultant" 
								liveChange="onSearchConsultant">
								
								</SearchField>
								
								</contentMiddle>
								
							</Bar>
						
							<List
							id="consultants"
							items="{consultantsModel>/results/}">
							
								<items>
								
									<ObjectListItem
										id="consultantObjectListItem"
										title="{consultantsModel>Consultant_Name} {consultantsModel>Consultant_Surname}"
										type="Active"
										press="onConsultantListItemPress">
									
										<attributes>
										
											<ObjectAttribute text="{consultantsModel>Consultant_Cell}" />
											
										</attributes>
										
								</ObjectListItem>
								
							</items>
							
						</List>
						
					</content>
					
					</IconTabFilter>
					
				</items>
				
			</IconTabBar>		
				
		</semantic:content>
		
		<semantic:customFooterContent>
			<Button 
			id="microphoneButton"
			press="TestMicrophone"
			icon="sap-icon://microphone"/>
			
			<l:VerticalLayout>
