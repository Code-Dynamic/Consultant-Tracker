<mvc:View 
xmlns:core="sap.ui.core" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" 
xmlns:semantic="sap.m.semantic"
controllerName="consultanttracker.Consultant-Tracker_Prototype-1.controller.Register" 
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:l="sap.ui.layout" 
xmlns:form="sap.ui.layout.form">

	<semantic:FullscreenPage 
	title="" 
	id="RegisterView">
	
		<l:VerticalLayout id="containerLayout_register" 
		width="100%">
		
			<VBox 
			xmlns="sap.m" 
			justifyContent="Center" 
			alignItems="Center" 
			alignContent="SpaceAround"
			direction="Column">
		
				<VBox 
				xmlns="sap.m" 
				justifyContent="Center" 
				alignItems="Center" 
				alignContent="Center" 
				direction="Column" 
				displayInline="true"
				fitContainer="true">
				
					<VBox class="sapUiSmallMargin">
					
						<form:SimpleForm 
						id="register_SimpleFormDisplay" 
						editable="false" 
						layout="ResponsiveGridLayout" 
						labelSpanXL="3" 
						labelSpanL="3"
						labelSpanM="3" 
						labelSpanS="12" 
						adjustLabelSpan="false" 
						emptySpanXL="4" 
						emptySpanL="4" 
						emptySpanM="4" 
						emptySpanS="0" 
						columnsXL="1"
						columnsL="1" 
						columnsM="1" 
						singleContainerFullSize="false" 
						backgroundDesign="Solid">
						
							<form:content>
								<Label text="Name" />
								<Input id="EditC_Name" value="{consultantModel>/Consultant_Name}"/>
								
								<Label text="Surname" />
								<Input id="EditC_Surname" value="{consultantModel>/Consultant_Surname}"/>
								
								<Label text="Email address" />
								<Input id="EditC_Email" value="{consultantModel>/Consultant_Email}"/>
								
								<Label text="Cell Number" />
								<Input id="EditC_Number" value="{consultantModel>/Consultant_Cell}"/>

								<Button 
								width="12rem" 
								text="Update and continue" 
								type="Emphasized" 
								press="onUpdateClick"/>
							</form:content>		
						</form:SimpleForm>
					</VBox>
					
				</VBox>
				
			</VBox>
			
		</l:VerticalLayout>
		
	</semantic:FullscreenPage>
</mvc:View>