<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.m.semantic">
	
	<Dialog title="Add Project Details">
	
		<content>
			<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
					<f:content>
				<Label text="Name"/>
				<Input id="p_Name"/>
				<Label text="Description"/>
				<TextArea id="p_Description"/>

				<Label text="Start Date"/>
				<DatePicker valueFormat="yyyy-MM-dd" displayFormat="long" width="100%" id="p_StartDate"/>					
				<Label text="Deadline"/>
				<DatePicker valueFormat="yyyy-MM-dd" displayFormat="long" width="100%" id="p_Deadline"/>			

				<Label text="OnSite"/>
				<CheckBox id="p_OnSite"/>
					
			</f:content>
		</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="Submit" press="onSubmitProject" id="submitProjectButton"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="onClose" id="closeProjectModalButton"/>

		</endButton>
	</Dialog>
	
</core:FragmentDefinition>