<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="Action Menu"
		showHeader="false"
		placement="Top" >
		
		<Toolbar>
			<Button
			width="100%"
			icon="sap-icon://business-card" 
			text="Add Client" 
			press="addClient" 
			id="addClientButton">
			</Button>
		</Toolbar>
		
		<Toolbar>
			<Button 		
			width="100%"	
			icon="sap-icon://folder" 
			text="Add Project" 
			press="addProject" 
			id="addProjectButton">
			</Button>
		</Toolbar>
		
		<Toolbar>	
			<Button 
			width="100%"			
			icon="sap-icon://employee" 
			text="Add Consultant" 
			press="addConsultant" 
			id="addConsultantButton">
			</Button>
		</Toolbar>
		
		<Toolbar>	
			<Button
			width="100%" 
			id="removeProjectButton" 
			text="Delete Project" 
			icon="sap-icon://folder" 
			press="removeProject">			
			</Button>
		</Toolbar>
		
		<Toolbar>	
			<Button 
			width="100%"
			id="requestUserTimesBtn" 
			text="Time Entry" 
			icon="sap-icon://time-entry-request" 
			press="onRequestUserTimes">
			</Button>
		</Toolbar>
		
	</Popover>
</core:FragmentDefinition>