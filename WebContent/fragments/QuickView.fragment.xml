<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

		<QuickView id="quickView" >
		<QuickViewPage
				pageId="pageId"
				header="header"
				icon="con"
				title="title"
				titleUrl="titleUrl"
				description="description">
			<QuickViewGroup heading="heading">
				<QuickViewGroupElement
						label="label"
						value="value"
						url="url"
						type="elementType"
						pageLinkId="pageLinkId"
						emailSubject="emailSubject"
						target="target"
						>
				</QuickViewGroupElement>
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>