<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.m.semantic">
	
	 
		<SelectDialog
		noDataText="No Tasks Found"
		title="Select Tasks"
		search="handleSearch"
		confirm="handleCloseRemoveTask"
		cancel="onCancel"
		items="{tasksModel>/results}" >
		
		<StandardListItem
			title="{tasksModel>Name}"
			description="{tasksModel>Due_Date}"
			iconDensityAware="false"
			iconInset="false"
			type="Active" />
			
	</SelectDialog>
	
</core:FragmentDefinition>