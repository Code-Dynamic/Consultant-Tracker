<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.m.semantic">
	
	<Dialog title="Edit Project Details">
	
		<content>
			<f:SimpleForm id="SimpleFormEditProjects"
			editable="true"
			layout="ResponsiveGridLayout"
			
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
					<f:content>
				<Label text="Name"/>
				<Input id="EP_Name" value="{projectsModel>/Project_Name}"/>
				<Label text="Description" />
				<TextArea id="EP_Description" value="{projectsModel>/Project_Description}"/>

				<Label text="Start Date"/>
				<DatePicker valueFormat="yyyy-MM-dd" displayFormat="long" width="100%" id="EP_StartDate" value="{ path: 'projectsModel>/Project_StartDate',
								formatter: '.formatter.date'}"/>					
				<Label text="Deadline"/>
				<DatePicker valueFormat="yyyy-MM-dd" displayFormat="long" width="100%" id="EP_Deadline" value="{ path: 'projectsModel>/Project_Deadline',
								formatter: '.formatter.date'}"/>			

				<Label text="OnSite"/>
				<CheckBox id="EP_OnSite" selected="{projectsModel>/Project_OnSite}"/>
					
			</f:content>
		</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="Submit" press="onProjectEditSubmit" id="EP_submitProjectButton"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="onClose" id="EP_closeProjectModalButton"/>

		</endButton>
	</Dialog>
	
</core:FragmentDefinition>