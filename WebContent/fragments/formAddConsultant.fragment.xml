<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:u="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.m.semantic">
	
	
	<Dialog title="Add Consultant Details">
	
		<content>
			<f:SimpleForm 
			id="SimpleFormChange300"
			editable="true"
			layout="ResponsiveGridLayout"
			
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			
			<f:content>
			
				<Label text="Name" />
				
				<Input id="c_Name" />
				
				<Label text="Surname" />
				
				<Input id="c_Surname" />
				
				<Label text="Email" />
				
				<Input id="c_email" />
				
				<Label text="Phone Number" />
				
				<Input id="c_Cell" />
				
				<Label text="Use a CSV file instead"/>
				<l:VerticalLayout>
					<u:FileUploader 
						id="csvUploader"
						name="myFileUpload" 
						uploadUrl="AddFolder" 
						tooltip="Upload your csv file to the local server"
						change="handleValueChange" 
						typeMissmatch="handleTypeMissmatch" 
						style="Emphasized" 
						fileType="csv" 
						placeholder="Choose a csv file ..."
						uploadOnChange="true">
					</u:FileUploader>
					<Button 
					id="consultantUploadButton"
					text="Upload File" 
					press="addConsultantsViaCSV"/>
				</l:VerticalLayout>
						
			</f:content>
			
		</f:SimpleForm>
		
		</content>
		
		<beginButton>
		
			<Button 
			text="Submit" 
			press="onSubmitConsultant"/>
			
		</beginButton>
		
		<endButton>
		
			<Button 
			text="Close" 
			press="onClose"/>
			
		</endButton>
		
	</Dialog>
	
</core:FragmentDefinition>