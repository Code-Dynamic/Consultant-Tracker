<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition
	xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Dialog 
		title="Add activity to task">
		<content>
			<f:SimpleForm 
			singleContainerFullSize="false" 
			columnsM="1" 
			columnsL="1" 
			columnsXL="1" 
			emptySpanS="0" 
			emptySpanM="4" 
			emptySpanL="4" 
			emptySpanXL="4" 
			adjustLabelSpan="false" 
			labelSpanS="12" 
			labelSpanM="3" 
			labelSpanL="3" 
			labelSpanXL="3" 
			layout="ResponsiveGridLayout" 
			editable="true" 
			id="SimpleFormAddTask">
				<f:content>
					<Label text="Activity description"/>
					<TextArea id="AT_Description"/>
					
					<Label text="Activity deadline"/>
					<DatePicker 
						id="AT_dateAssigned" 
						width="100%" 
						displayFormat="long" 
						valueFormat="yyyy-MM-dd"/>
					
					<Label text="Activity deadline"></Label>
					<DatePicker 
						id="AT_Deadline" 
						width="100%" 
						displayFormat="long" 
						valueFormat="yyyy-MM-dd"/>
						
					<Label text="Allocate hours to activity"></Label>
					<TimePicker
						id="allocatedHours"
						value="00"
						valueFormat="HH"
						displayFormat="HH"
						placeholder="allocate hours"/>
						
					<Label text="Assign consultant to activity"></Label>
				 	
				 	<Select id="consultantSelected"
						forceSelection="false"
						items="{membersModel>/results}">
	
						<core:Item key="{membersModel>ConsultantDetails/Consultant_ID}" text="{membersModel>ConsultantDetails/Consultant_Name} {membersModel>ConsultantDetails/Consultant_Surname}" />
					</Select>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button
				id="submitActivityFrag"
				text="Submit" 
				press="handleCloseAddActivity"/>
		</beginButton>
		<endButton>
			<Button
				id="closeActivityFrag"
 				text="Close"
 				press="onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>