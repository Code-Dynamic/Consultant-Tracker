<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="Action Menu"
		showHeader="false"
		placement="Top" >
		
		<Toolbar>	
			<Button 
			width="100%"
			id="requestUserTimesBtn" 
			text="time entry" 
			icon="sap-icon://time-entry-request" 
			press="onRequestUserTimes">
			</Button>
		</Toolbar>
		
		<Toolbar>
			<Button
			width="100%"
			text="communication" 
	 		id="feedBackAdminBtn" 
			icon="sap-icon://notification-2" 
			press="onFeedbackPress">
			</Button>
		</Toolbar>
	</Popover>
</core:FragmentDefinition>